.container
    .row.justify-content-md-center
        .col-sm-12.col-md-9.box_chat
            .row
                .col-12.p-0
                    app-top-bar(
                        '[(user)]'="user" 
                        '(eventSearchMessageList)'="eventSearchMessageList($event)")
            .row.h-100
                .col-md-3.col-lg-3.col-xl-3.d-none.d-sm-none.d-md-block.p-0
                    app-search-user('(eventSearchUserList)'="eventSearchUserList($event)")
                    app-list-users(
                        '(eventSelectUserChat)'="eventSelectUserChat($event)" 
                        '[(users)]'="filteredListUsers")
                .col-sm-12.col-md-9.col-lg-9.col-xl-9.p-0
                    app-list-messages(
                        '[(messages)]'="messages" 
                        '(eventEditMessage)'="eventEditMessage($event)")
                    app-smile-bar('(eventAddInputSmile)' = "eventAddInputSmile($event)")
                    app-input-message(
                        '[(message)]'="message" 
                        '[(boolUpdateMessage)]'="boolUpdateMessage"
                        '(eventRepliceMessage)'="eventRepliceMessage($event)" 
                        '(eventSendMessages)'= "eventSendMessages($event)"
                        '(eventUpdateMessages)'="eventUpdateMessages($event)")